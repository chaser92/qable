{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2016",
        "lib": ["es2016", "ES2018.AsyncIterable", "ES2018.AsyncGenerator", "dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": ["@types/jest", "node"]
    },
    "include": [
        "src/**/*",
        "test/**/*.test.ts", "knexfile.ts",
    ]
}